<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:id="@+id/received_msg_card"
        >
        <TextView
            android:id="@+id/msg_content"
            android:background="@drawable/rounded_corners_background_dg"
            android:layout_width="0dp"
            android:padding="8dp"
            android:fontFamily="@font/youngserifregular"
            android:layout_marginStart="10dp"
            app:layout_constraintWidth_max="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Message Content Message Content Message Content Message Content Message Content Message Content "
            android:textColor="#FFFBE6"/>

        <TextView
            android:id="@+id/msg_timestamp"
            android:fontFamily="@font/youngserifregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TimeStamp"
            android:textColor="#6F5329"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/msg_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

