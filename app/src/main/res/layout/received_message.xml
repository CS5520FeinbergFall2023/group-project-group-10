<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/received_msg_card">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/received_msg_ll"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/msg_content"
            android:background="@color/dark_green"
            android:layout_width="0dp"
            android:fontFamily="@font/youngserifregular"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/message_content_message_content_message_content_message_content_message_content_message_content"
            android:textColor="@color/light_green"/>
        <TextView
            android:id="@+id/msg_timestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/youngserifregular"
            android:text="@string/dismiss"
            android:textColor="@color/dark_green"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>