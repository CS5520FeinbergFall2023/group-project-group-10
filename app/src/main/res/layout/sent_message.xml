    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"

        android:id="@+id/msg_sent_card">
        <TextView
            android:id="@+id/msg_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TimeStamp"
            android:textColor="#6F5329"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/msg_content"/>
        <TextView
            android:id="@+id/msg_content"
            android:background="@drawable/rounded_corners_background_lg"
            android:layout_width="0dp"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            app:layout_constraintWidth_max="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Message Content Message Content Message Content Message Content Message Content Message Content "
            android:textColor="#6F5329"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

