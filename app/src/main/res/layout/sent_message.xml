<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/msg_sent_card">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sent_msg_ll"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/msg_timestamp"
            android:layout_width="0dp"
            android:fontFamily="@font/youngserifregular"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/timestamp"
            android:textColor="@color/dark_green"/>
        <!--
        <TextView
            android:id="@+id/msg_content"
            android:background="@drawable/speech_bubble"
            android:layout_gravity="end"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:textSize="16sp"
            android:maxWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message Content Message Content Message Content Message Content Message Content Message Content "
            android:textColor="@color/light_yellow"/>
 -->


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sentMessageInFrame"
                android:textColor="@color/dark_green"
                android:fontFamily="@font/youngserifregular"
                android:background="@drawable/speech_bubble"
                android:textSize="16sp"
                android:maxWidth="200dp"
                android:minWidth="50dp"
                android:padding="24dp"
                android:text="@string/message_content_message_content_message_content_message_content_message_content_message_content"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/speech_bubble"
                android:rotation="-360"
                android:contentDescription="@string/speech_bubble" />

        </FrameLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>