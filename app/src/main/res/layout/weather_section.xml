<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/layout_today"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_weather_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sunny_24" />

        <TextView
            android:id="@+id/txt_weather_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunny"
            android:textAlignment="center" />
    </LinearLayout>

    <!-- Repeat the above LinearLayout for 'Tomorrow' and 'Friday'
         with respective @+id's like layout_tomorrow, img_weather_tomorrow, etc. -->
</LinearLayout>
